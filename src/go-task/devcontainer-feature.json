{
	"name": "Task",
	"id": "go-task",
	"version": "1.0.3",
	"description": "Installs Task, a task runner / simpler Make alternative. Works with 'Taskfile.yml'.",
	"documentationURL": "https://github.com/PlanLX/devcontainer-features/tree/main/src/task",
	"options": {
		"version": {
			"type": "string",
			"proposals": [
				"latest",
				"3"
			],
			"default": "latest",
			"description": "Select version of Task."
		}
	},
	"installsAfter": [
		"ghcr.io/devcontainers/features/common-utils",
		"ghcr.io/devcontainers/features/powershell"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"task.vscode-task"
			]
		}
	}
}
